<% include ../partials/header %>
<div class="container">
        <header class="jumbotron text-center">
            <h1>Bizim Restorana Hoşgeldiniz..</h1>
            <p>En leziz yemekleri bulabileceğiniz ve herkesle paylasabileceğiniz bir sayfa</p>
            <a href="/yemekler/yeni" class="btn btn-primary btn-large">Yeni Yemek Ekle</a>
        </header>
<h1 class="text-center" style="margin:42px;">Yemekler</h1>
<div class="row align-items-center">
        <% yemekler.forEach(function(yemek){ %>
        <div class="col-md-4 col-sm-6">
            <div style ="width:300px;height:300px;overflow:auto;" class="thumbnail">
                    <img style="width:100%;height:200px;display:block;"  src="<%= yemek.resim %>"/>
                    <div class="caption text-center">
                        <p><a href="/yemekler/<%= yemek._id %>" class="btn btn-primary"><%= yemek.adi %></a></p>
                    </div>
                </div>
        </div>
        <% });%>
</div>

<% include ../partials/footer %>
</div>

